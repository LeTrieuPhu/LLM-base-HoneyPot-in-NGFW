FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    openssh-client \
    net-tools \
    libffi-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python packages
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application files
COPY app/ /app/

# Create directories for all users
RUN mkdir -p /app/Logs/SSH /app/Conversations/SSH \
    /app/home/root /app/home/admin /app/home/dev1 /app/home/dev2 /app/home/guest /app/home/backup_user \
    /app/var/www/html /app/var/log /app/etc

# Set environment variables
ENV PYTHONPATH=/app

EXPOSE 22

CMD ["python", "ssh_server.py"]